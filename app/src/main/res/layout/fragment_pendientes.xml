<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagen superior -->
    <ImageView
        android:id="@+id/imgRepartidor"
        android:layout_width="194dp"
        android:layout_height="176dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/repartidor"

        />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="REPARTIDOR"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvPendientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuarios"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_gravity="start"/>

    <!-- RecyclerView de usuarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsuarios"
        android:layout_width="374dp"
        android:layout_height="404dp"
        android:layout_weight="1"
        android:contentDescription="Lista de usuarios pendientes"
        android:paddingTop="8dp" />

</LinearLayout>
